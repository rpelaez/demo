<h1>Listing admissions</h1>

<table>
  <tr>
    <th>Case</th>
    <th>Status</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @admissions.each do |admission| %>
  <tr>
    <td><%= admission.case_id %></td>
    <td><%= admission.status %></td>
    <td><%= admission.date %></td>
    <% # el link_to es para poner un enlace en la web hacia la pantalla de case %>
    <td><%= link_to admission.case.name, admission.case %></td>
    <td><%= link_to 'Show', admission %></td>
    <td><%= link_to 'Edit', edit_admission_path(admission) %></td>
    <td><%= link_to 'Destroy', admission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Admission', new_admission_path %>
